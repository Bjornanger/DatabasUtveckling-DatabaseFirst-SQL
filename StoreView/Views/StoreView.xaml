<Page
    x:Class="Main.Views.StoreView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Main.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="StoreView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="1"
            Content="Store" />
        <ListView
            Name="StoreList"
            Grid.Row="2"
            Grid.Column="1">
            <GridView>
                <GridViewColumn Header="Storename" />
                <GridViewColumn Header="City" />
                <GridViewColumn Header="Adress" />
            </GridView>
        </ListView>
        <Button
            Name="AddToStoreBtn"
            Grid.Row="4"
            Grid.Column="1"
            Width="100"
            Height="30"
            HorizontalAlignment="Right"
            Click="AddToStoreBtn_OnClick" >Add Book</Button>
        <Button
            Name="RemoveFromStoreBtn"
            Grid.Row="4"
            Grid.Column="1"
            Width="100"
            Height="30"
            HorizontalAlignment="Center"
            Click="RemoveFromStoreBtn_OnClick" >Remove Book</Button>
        <Button
            Name="ShowStoreInventoryBtn"
            Grid.Row="4"
            Grid.Column="1"
            Width="100"
            Height="30"
            HorizontalAlignment="Left"
            Click="ShowStoreInventoryBtn_OnClick" >Show Store</Button>
        <ListView
            Name="StoreInventory"
            Grid.Row="2"
            Grid.Column="2"
            Height="150"
            VerticalAlignment="Top"
            ItemsSource=""
            SelectedItem=""
            SelectionChanged="StoreInventory_OnSelectionChanged" />
        <ListView
            Name="FullInventory"
            Grid.Row="2"
            Grid.Column="2"
            Height="150"
            VerticalAlignment="Bottom"
            ItemsSource=""
            SelectedItem=""
            SelectionChanged="FullInventory_OnSelectionChanged" />
    </Grid>
</Page>
