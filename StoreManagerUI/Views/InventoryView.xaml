<UserControl
    x:Class="StoreManagerUI.Views.InventoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StoreManagerUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Width="100"
            Height="35"
            HorizontalAlignment="Center">
            Authors
        </Label>
        <ListView
            Name="AuthorListInView"
            Grid.Row="2"
            Grid.Column="1"
            Height="200"
            VerticalAlignment="Top"
            ItemsSource="{Binding Path=AuthorList}"
            SelectedItem="{Binding Path=AuthorSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectionChanged="AuthorListInView_OnSelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding FirstName}"
                        Header="Firstname" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding LastName}"
                        Header="Lastname" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding DateOfBirth}"
                        Header="DateOfBirth" />
                </GridView>
            </ListView.View>
        </ListView>
        <Grid
            Grid.Row="2"
            Grid.RowSpan="3"
            Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Content="ISBN:" />
            <TextBox
                Name="IsbnBox"
                Grid.Row="0"
                Grid.Column="1"
                Text="{Binding Path=InsertISBN, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Label
                Grid.Row="1"
                Grid.Column="0"
                Content="Title:" />
            <TextBox
                Name="TitleBox"
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding Path=InsertTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Label
                Grid.Row="2"
                Grid.Column="0"
                Content="Language" />
            <TextBox
                Name="LanguageBox"
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding Path=InsertLanguage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Label
                Grid.Row="3"
                Grid.Column="0"
                Content="Price" />
            <TextBox
                Name="PriceBox"
                Grid.Row="3"
                Grid.Column="1"
                Text="{Binding Path=InsertPrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Label
                Grid.Row="4"
                Grid.Column="0"
                Content="ReleaseDate" />
            <TextBox
                Name="ReleaseDateBox"
                Grid.Row="4"
                Grid.Column="1"
                Text="{Binding Path=InsertReleaseDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Button
                Name="SaveBtn"
                Grid.Row="7"
                Grid.Column="1"
                Width="70"
                Height="35"
                HorizontalAlignment="Left"
                Click="SaveBtn_OnClick">
                Save
            </Button>
            <Button
                Name="ShowAuthorBtn"
                Grid.Row="7"
                Grid.Column="1"
                Width="70"
                Height="35"
                HorizontalAlignment="Right"
                Click="ShowAuthorBtn_OnClick">
                Show
            </Button>
        </Grid>
        <ListView
            Grid.Row="2"
            Grid.Column="3"
            Height="200"
            VerticalAlignment="Top"
            ItemsSource="{Binding Path=AuthorBookList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding Isbn13}"
                        Header="Isbn13" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding Title}"
                        Header="Title" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding Language}"
                        Header="Language" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding Price}"
                        Header="Price" />
                    <GridViewColumn
                        Width="Auto"
                        DisplayMemberBinding="{Binding ReleaseDate}"
                        Header="ReleaseDate" />
                </GridView>
            </ListView.View>

        </ListView>




    </Grid>
</UserControl>
