<Window
    x:Class="StoreManagerUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:views="clr-namespace:StoreManagerUI.Views"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <TabControl Grid.Row="1" Grid.Column="1">
            <TabItem Name="StoreTab" Header="Store"> 
                <views:StoreManagerView />
            </TabItem>
            <TabItem Name="InventoryTab" Header="Manage Inventory" >
                <views:InventoryView/>
            </TabItem>
        </TabControl>



    </Grid>
</Window>
